<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AVISO"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_light"
            android:text="Recuerda: la foto es un campo obligatorio, para mayor seguridad  la foto es de frente mostrando el rostro, al terminar tu registro verificaremos si tu foto es la ideal para usar la aplicación, si no procederemos a borrar tu cuenta."
            android:textSize="20dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EJEMPLO"
            android:textSize="20dp"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cara"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gracias por su compresión, presione el botón de regresar para continuar."
            android:textSize="20dp"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />


    </LinearLayout>


</LinearLayout>